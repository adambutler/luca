<%= link_to user_path(user) do %>
  <div class="relative mb-5">
    <div class="relative w-96 mx-auto bg-slate-800 shadow-xl">
      <img class="w-32 rounded-full -mt-16 -mx-16 border-8 border-slate-700 absolute top-0 left-1/2" src="<%= gravitar_url(user) %>" alt="">
      <div class="text-center pt-20 text-3xl font-medium"><%= user.full_name %></div>
      <div class="text-center mt-2 font-light text-sm"><%= user.email %></div>
      <div class="px-6 text-center mt-2 font-light text-sm">
        <p>
          Member since <%= user.created_at.strftime("%B %Y") %>
        </p>
      </div>
      <hr class="mt-8 border-slate-700">
      <div class="flex p-4">
        <div class="w-1/2 text-center">
          <span class="font-bold"><%= user.workouts.count %></span> Workouts
        </div>
        <div class="w-0 border border-slate-700">
          
        </div>
        <div class="w-1/2 text-center">
          <span class="font-bold"><%= user.activities.count %></span> Activities
        </div>
      </div>
    </div>
  </div>
<% end %>
