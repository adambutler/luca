<!DOCTYPE html>
<html style="<%= polaris_html_styles %>">
  <head>
    <title>Luca</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "polaris_view_components" %>

    <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
    <%= yield :head %>
  </head>

  <body style="<%= polaris_body_styles %>" class="bg-slate-900">
    <main class="mx-auto">
      <%= render "layouts/logo" %>
      <%= render "layouts/toast" %>
      <%= render "layouts/return_to_client" %>

      <% if content_for?(:heading) %>
        <%= yield :heading %>
      <% end %>

      <% if content_for?(:heading_text) %>
        <%= render ContainerComponent.new do %>
          <%= polaris_text(variant: :heading4xl, as: :h1) do %>
            <%= yield :heading_text %>
          <% end %>
        <% end %>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
