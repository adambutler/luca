<% content_for(:heading_text) { greet } %>

<div class="relative w-full flex gap-6 snap-x overflow-x-auto py-5">
  <% @workouts.each do |workout| %>
    <div class="snap-center shrink-0 w-5/6 max-w-96 px-1 first:pl-8 last:pr-8">
      <%= render "workouts/card", workout: workout %>
    </div>
  <% end %>
</div>

<%= link_to new_workout_path do %>
  <%= polaris_button(full_width: true) { "Add Workout" } %>
<% end %>

