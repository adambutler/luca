<h1 class="text-xl font-bold leading-tight tracking-tight text-slate-500 md:text-2xl dark:text-white">
  Create an account
</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-5">
    <%= f.label :email, class: "block mb-2 text-sm font-medium text-slate-500 dark:text-white" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full p-4 text-sm text-slate-400 border border-slate-800 rounded-lg bg-slate-800 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-5">
    <%= f.label :password, class: "block mb-2 text-sm font-medium text-slate-500 dark:text-white" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "block w-full p-4 text-sm text-slate-400 border border-slate-800 rounded-lg bg-slate-800 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-5">
    <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-slate-500 dark:text-white" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full p-4 text-sm text-slate-400 border border-slate-800 rounded-lg bg-slate-800 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-5">
    <%= render(ButtonComponent.new(type: :primary, full_width: true, submit: true)) { "Sign up" } %>
  </div>

  <p class="text-sm font-light text-gray-500 dark:text-gray-400">
    Already have an account? <%= link_to "Login here", new_user_session_path, class: "font-medium text-blue-600 hover:underline dark:text-blue-500" %>
  </p>
<% end %>
